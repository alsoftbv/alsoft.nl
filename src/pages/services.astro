---
import BaseLayout from "../layouts/BaseLayout.astro";

import services from "../data/services";
---

<BaseLayout>
    <section class="header">
        <h1>Services</h1>
    </section>

    <p class="general-description">A general description goes here</p>

    {
        services.map((service, index) => (
            <section class="service-section">
                <div class="service-content">
                    <h2
                        id={service.title.replace(/\s+/g, "").toLowerCase()}
                        style={`--bg-img: url(${service.image})`}
                    >
                        <span>{service.title}</span>
                    </h2>

                    <p class="service-description">{service.description}</p>
                    <a href="/contact" class="contact-button">
                        Get in touch
                    </a>
                </div>
            </section>
        ))
    }
</BaseLayout>

<style>
    .header {
        background-color: #ffd180;
        padding: 4rem 2rem;
        text-align: left;
        font-size: 2.5rem;
    }

    .general-description {
        text-align: center;
        margin: 2rem;
        max-width: 100vw;
        font-size: 1.2rem;
        color: #fff;
        margin-top: 4rem;
    }

    .service-section {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .service-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .contact-button {
        background: #ff9100;
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-weight: bold;
        text-decoration: none;
        transition: background 0.2s;
        align-self: flex-end;
        margin-right: 10%;
    }

    .contact-button:hover {
        background-color: #ffd180;
    }

    @media (max-width: 768px) {
        .header {
            text-align: center;
            margin: 0;
        }

        .contact-button {
            align-self: center;
            margin: 0;
        }
    }

    .service-content h2 {
        scroll-margin-top: 70px;
        position: relative;
        overflow: hidden;
        text-align: center;
        color: black;
        padding: 3rem 0;
        margin: 0;
        width: 100vw;
        background: none;
    }

    .service-description {
        margin: 2rem;
        font-size: 1.1rem;
        color: #fff;
        text-align: center;
    }

    .service-content h2::before {
        content: "";
        position: absolute;
        inset: 0;
        background-image: var(--bg-img);
        background-size: cover;
        background-position: center;
        filter: blur(4px);
        transform: scale(1.1);
        z-index: 0;
        width: 100%;
    }

    .service-content h2 span {
        position: relative;
        z-index: 1;
    }

    .service-content h2 > * {
        position: relative;
        z-index: 2;
    }
</style>
