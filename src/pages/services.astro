---
import BaseLayout from "../layouts/BaseLayout.astro";

import services from "../data/services";
---

<BaseLayout>
    <section class="header">
        <h1>Services</h1>
    </section>

    <p class="general-description">A general description goes here</p>

    {
        services.map((service, index) => (
            <section
                class={`service-section ${index % 2 !== 0 ? "reverse" : ""}`}
            >
                <div class="service-content">
                    <img
                        class="service-image"
                        src={service.image}
                        alt={service.title}
                    />
                    <div class="text-content">
                        <h2
                            id={service.title.replace(/\s+/g, "").toLowerCase()}
                        >
                            {service.title}
                        </h2>
                        <p class="service-description">
                            {service.longDescription}
                        </p>
                        <a href="/contact" class="contact-button">
                            Get in touch
                        </a>
                    </div>
                </div>
            </section>
        ))
    }
</BaseLayout>

<style>
    .header {
        background: linear-gradient(-45deg, #ff9100 0%, #ffd180 100%);
        padding: 4rem 2rem;
        text-align: left;
        font-size: 2.5rem;
    }

    .general-description {
        text-align: center;
        margin: 4rem 2rem 2rem;
        font-size: 1.2rem;
        color: #fff;
    }

    .service-section {
        display: flex;
        justify-content: center;
        padding: 2rem;
    }

    .service-content {
        display: flex;
        align-items: center;
        gap: 2rem;
        flex-wrap: nowrap;
        max-width: 1200px;
        width: 100%;
    }

    .service-section.reverse .service-content {
        flex-direction: row-reverse;
    }

    .service-image {
        width: 50%;
        max-width: 900px;
        border-radius: 10px;
    }

    .text-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        flex: 1;
        text-align: center;
    }

    .text-content h2 {
        margin: 0;
        color: #fff;
        font-size: 3rem;
    }

    .service-description {
        color: #fff;
        font-size: 1.1rem;
    }

    .contact-button {
        background: #ff9100;
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-weight: bold;
        text-decoration: none;
        transition: background 0.2s;
        align-self: center;
    }

    .contact-button:hover {
        background-color: #ffd180;
    }

    @media (max-width: 768px) {
        .service-section.reverse .service-content {
            flex-direction: column;
        }

        .service-content {
            flex-direction: column;
            gap: 1.5rem;
        }

        .service-image {
            width: 90%;
        }
    }
  
</style>
