---
import Card from "@components/Card.astro";
import Header from "@components/Header.astro";
import WebSocketClient from "@components/websocket/Client";
import ToolLayout from "@layouts/ToolLayout.astro";

import en from "@locales/en.json";

const t = en;
---

<ToolLayout title={t.websocket.title} description={t.websocket.description}>
  <Header>{t.websocket.client}</Header>
  <Card class="client">
    <WebSocketClient lang="en" client:only="react" />
  </Card>
</ToolLayout>

<style>
  .client {
    max-width: 960px;
    margin: 2rem auto;
  }
</style>
