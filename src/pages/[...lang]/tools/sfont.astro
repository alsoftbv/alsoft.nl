---
import Header from "@components/Header.astro";
import Note from "@components/Note.astro";
import SFontApp from "@components/sfont/App";
import ToolLayout from "@layouts/ToolLayout.astro";
import {
  getTranslationPaths,
  getLanguage,
  useTranslations,
} from "@locales/utils";

export function getStaticPaths() {
  return getTranslationPaths();
}

const lang = getLanguage(Astro.params.lang);
const t = useTranslations(lang);
---

<ToolLayout title="sFONT Generator">
  <Header>sFONT Generator</Header>
  <SFontApp client:only="react" />
  <Note>
    All changes are automatically saved to your browser's local storage.
  </Note>
</ToolLayout>
