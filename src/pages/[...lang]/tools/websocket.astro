---
import Card from "@components/Card.astro";
import Header from "@components/Header.astro";
import WebSocketClient from "@components/websocket/Client";
import ToolLayout from "@layouts/ToolLayout.astro";
import {
  getLanguage,
  getTranslationPaths,
  useTranslations,
} from "@locales/utils";

export function getStaticPaths() {
  return getTranslationPaths();
}

const lang = getLanguage(Astro.params.lang);
const t = useTranslations(lang);
---

<ToolLayout title={t.websocket.title} description={t.websocket.description}>
  <Header>{t.websocket.client}</Header>
  <Card class="client">
    <WebSocketClient lang={lang} client:only="react" />
  </Card>
</ToolLayout>

<style>
  .client {
    max-width: 960px;
    margin: 2rem auto;
  }
</style>
