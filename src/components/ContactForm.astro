---
import Button from "./Button.astro";
import { Image } from "astro:assets";

import logoImage from "../images/logo.png";
---

<section class="contact-section">
  <div class="contact-form">
    <h2>Your name</h2>
    <input type="text" />
    <h2>Tell us about your project</h2>
    <textarea></textarea>
    <Button id="submit-contact">Submit</Button>
  </div>
  <div class="contact-image">
    <Image src={logoImage} alt="Logo" />
  </div>
</section>

<style>
  .contact-section {
    padding: 1.5rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 2rem;
    background-color: #202020;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    flex: 0 0 auto;
    min-width: 60%;
  }

  .contact-form h2 {
    margin: 0 0 1rem 0;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    box-sizing: border-box;
    padding: 0.5rem;
    margin-bottom: 1rem;
    border: none;
    border-radius: 6px;
    background-color: #3f3f3f;
    font: inherit;
    outline: none;
    resize: none;
    transition:
      background-color 0.2s ease,
      box-shadow 0.2s ease;
  }

  .contact-form textarea {
    min-height: 8rem;
    margin-bottom: 2rem;
  }

  .contact-form input:focus,
  .contact-form textarea:focus {
    filter: brightness(1.2);
    box-shadow: 0 0 0 2px #ff9100;
  }

  .contact-image {
    flex: 1;
    max-height: 100%;
  }

  .contact-image img {
    width: 100%;
    height: auto;
  }

  @media (max-width: 768px) {
    .contact-form {
      min-width: 100%;
    }

    .contact-image {
      display: none;
    }
  }
</style>

<script>
  document.getElementById("submit-contact")?.addEventListener("click", () => {
    const nameInput = document.querySelector(
      "input",
    ) as HTMLInputElement | null;
    const messageInput = document.querySelector(
      "textarea",
    ) as HTMLTextAreaElement | null;

    const name = nameInput?.value || "";
    const message = messageInput?.value || "";

    const subject = encodeURIComponent(`Contact Form Submission - ${name}`);
    const body = encodeURIComponent(`From: ${name}\n\n${message}`);

    window.location.href = `mailto:altug@alsoft.nl?subject=${subject}&body=${body}`;
  });
</script>
