---
import Button from "./Button.astro";
import { Image } from "astro:assets";

import logoImage from "@images/logo.png";

import en from "@locales/en.json";
import nl from "@locales/nl.json";
import Card from "./Card.astro";

const locale = Astro.currentLocale ?? "en";
const t = locale === "nl" ? nl : en;
const contactText =
  locale === "nl" ? "Contactformulier" : "Contact Form Submission";
---

<section class="contact-section">
  <Card class="content">
    <div class="contact-form">
      <h2>{t.contact.yourName}</h2>
      <input type="text" />
      <h2>{t.contact.tellUs}</h2>
      <textarea></textarea>
      <Button id="submit-contact">{t.contact.submit}</Button>
      <p class="get-back">
        {t.contact.getBack}
      </p>
    </div>
    <div class="contact-image">
      <Image src={logoImage} alt="Logo" loading="eager" />
    </div>
  </Card>
</section>

<style>
  .contact-section {
    padding: 1.5rem 1rem;
  }

  .content {
    padding: 2rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 3rem;
    max-width: 960px;
    margin: 0 auto;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    box-sizing: border-box;
    padding: 0.5rem;
    margin-bottom: 1rem;
    border: none;
    border-radius: 8px;
    background-color: #3f3f3f;
    font: inherit;
    outline: none;
    resize: none;
    transition:
      background-color 0.2s ease,
      box-shadow 0.2s ease;
  }

  .contact-form textarea {
    min-height: 8rem;
    margin-bottom: 2rem;
  }

  .contact-form input:focus,
  .contact-form textarea:focus {
    filter: brightness(1.2);
    box-shadow: 0 0 0 2px #ff9100;
  }

  .contact-image {
    max-width: 20%;
  }

  .contact-image img {
    width: 100%;
    height: auto;
  }

  .get-back {
    display: block;
    font-size: 0.9em;
    text-align: center;
  }

  @media (max-width: 768px) {
    .content {
      padding: 1rem;
    }

    .contact-section {
      padding: 0.5rem;
    }

    .contact-image {
      display: none;
    }

    .contact-form textarea {
      min-height: 12rem;
      margin-bottom: 2rem;
    }
  }
</style>

<script is:inline define:vars={{ contactText }}>
  document.getElementById("submit-contact")?.addEventListener("click", () => {
    const nameInput = document.querySelector("input");
    const messageInput = document.querySelector("textarea");

    const name = nameInput.value || "";
    const message = messageInput.value || "";

    const subject = encodeURIComponent(`${contactText} - ${name}`);
    const body = encodeURIComponent(message);

    window.location.href = `mailto:altug@alsoft.nl?subject=${subject}&body=${body}`;
  });
</script>
