---
import GetInTouchButton from "./button/GetInTouchButton.astro";
---

<div class="footer">
    <div class="footer-left">
        <p>Address:</p>
        <p>Valkenswaard, Netherlands</p>
        <a href="mailto:info@alsoftbv.com?subject=Contact%20Form%20Submission">
            Contact:
        </a>
        <p>info@alsoft.nl</p>
        <a
            href="https://www.linkedin.com/company/alsoftbv"
            target="_blank"
            aria-label="LinkedIn"
        >
            <img src="/linkedin.png" alt="LinkedIn" />
        </a>
    </div>

    <div class="footer-right">
        <a href="/services">Services</a>
        <a href="/industries">Industries</a>
        <a href="/about">About Us</a>

        <div class="small-button">
            <GetInTouchButton />
        </div>
    </div>
</div>

<style>
    .footer {
        background-color: black;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 1.5rem 2rem;
        flex-wrap: wrap;
    }

    .footer-left {
        display: flex;
        flex-direction: column;
    }

    .footer-left p {
        margin: 0;
        padding: 0.2rem 0;
    }

    .footer-right {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        gap: 0.5rem;
    }

    a {
        color: white;
        text-decoration: none;
        font-size: 0.95rem;
        transition: text-decoration 0.2s ease;
    }

    a:hover {
        text-decoration: underline;
    }

    img {
        height: 22px;
        width: auto;
        opacity: 0.9;
        transition: opacity 0.2s ease;
    }

    img:hover {
        opacity: 1;
    }

    .small-button {
        transform: scale(0.65);
    }

    @media (max-width: 768px) {
        .footer {
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: flex-start;
            margin-top: 5%;
        }

        p,
        a {
            font-size: 0.7rem;
        }

        .small-button {
            transform: scale(0.5);
        }

        img {
            height: 20px;
        }
    }
</style>
