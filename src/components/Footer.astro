---
import Button from "./Button.astro";
import { Image } from "astro:assets";
import linkedinImage from "../images/linkedin.png";
---

<section class="footer">
  <div class="footer-left">
    <p>Address:</p>
    <p>Valkenswaard, Netherlands</p>
    <p>Contact:</p>
    <a href="mailto:info@alsoft.nl?subject=Contact%20Form%20Submission">
      <p>info@alsoft.nl</p>
    </a>
    <a
      href="https://www.linkedin.com/company/alsoftbv"
      target="_blank"
      aria-label="LinkedIn"
      class="linkedin-image"
    >
      <Image src={linkedinImage} alt="LinkedIn" />
    </a>
  </div>

  <div class="footer-right">
    <a href="/services">Services</a>
    <a href="/industries">Industries</a>
    <br />
    <br />
    <Button href="/contact" class="small-button">Get in touch</Button>
  </div>
</section>

<style>
  .footer {
    background-color: #000000;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: stretch;
    padding: 1.5rem 2rem;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    margin-left: 10%;
  }

  .footer-right {
    display: flex;
    flex-direction: column;
    align-items: end;
    justify-content: space-between;
    text-align: right;
    margin-right: 10%;
  }

  p,
  a,
  br {
    margin: 0;
    padding: 0.2rem 0;
  }

  br {
    height: 1em;
  }

  a {
    text-decoration: none;
    transition: text-decoration 0.2s ease;
  }

  a:hover {
    text-decoration: underline;
  }

  img {
    height: 1.5rem;
    width: auto;
    display: block;
    margin: 0;
    padding: 0.2rem 0;
  }

  .small-button {
    font-size: 0.7rem;
  }

  .small-button:hover {
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .footer {
      flex-wrap: wrap;
      justify-content: space-between;
    }

    p,
    a {
      font-size: 0.7rem;
    }

    img {
      height: 1rem;
    }

    .small-button {
      font-size: 0.5rem;
    }
  }
</style>
