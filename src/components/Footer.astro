---
import Button from "./Button.astro";
import { Image } from "astro:assets";

import linkedinImage from "../images/footer/linkedin.png";
import kvkImage from "../images/footer/kvk.jpg";
import btwImage from "../images/footer/btw.jpg";
import locationImage from "../images/footer/location.svg";
import mailImage from "../images/footer/mail.svg";
---

<section class="footer">
  <div class="footer-left">
    <div class="icon-text">
      <Image src={kvkImage} alt="KvK" loading="lazy" /><p>96553863</p>
    </div>
    <div class="icon-text">
      <Image src={btwImage} alt="BTW" loading="lazy" />
      <p>NL867658472B01</p>
    </div>
    <div class="icon-text">
      <Image src={locationImage} alt="Location" loading="lazy" />
      <p>Valkenswaard, Netherlands</p>
    </div>
    <a
      href="mailto:info@alsoft.nl?subject=Contact%20Form%20Submission"
      class="icon-text"
    >
      <Image src={mailImage} alt="e-mail" loading="lazy" />
      <p>info@alsoft.nl</p>
    </a>
    <a
      href="https://www.linkedin.com/company/alsoftbv"
      target="_blank"
      class="icon-text"
    >
      <Image src={linkedinImage} alt="LinkedIn" loading="lazy" />
      <p>alsoftbv</p>
    </a>
  </div>

  <div class="footer-right">
    <a href="/services">Services</a>
    <a href="/industries">Industries</a>
    <span></span>
    <span></span>
    <Button href="/contact" class="small-button">Get in touch</Button>
  </div>
</section>

<style>
  .footer {
    background-color: #000000;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 1.5rem 2rem;
    max-width: 60vw;
    margin: 0 auto;
  }

  .footer-left,
  .footer-right {
    display: grid;
    grid-template-rows: repeat(5, 1fr);
    gap: 0.3rem;
  }

  .footer-right {
    justify-items: end;
  }

  p,
  a,
  br {
    line-height: 1em;
    margin: 0;
  }

  br {
    height: 1em;
  }

  a {
    text-decoration: none;
    transition: text-decoration 0.2s ease;
  }

  a:hover {
    text-decoration: underline;
  }

  img {
    height: 1.5rem;
    width: auto;
    display: block;
    margin: 0;
    border-radius: 10%;
  }

  .icon-text {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.5em;
  }

  .small-button {
    font-size: 0.7rem;
  }

  .small-button:hover {
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .footer {
      max-width: none;
    }

    p,
    a {
      font-size: 0.7rem;
    }

    img {
      height: 1rem;
    }

    .small-button {
      font-size: 0.5rem;
    }
  }
</style>
