---
import GetInTouchButton from "./button/GetInTouchButton.astro";
---

<section class="footer">
  <div class="footer-left">
    <p>Address:</p>
    <p>Valkenswaard, Netherlands</p>
    <p>Contact:</p>
    <a href="mailto:info@alsoft.nl?subject=Contact%20Form%20Submission">
      info@alsoft.nl
    </a>
    <a
      href="https://www.linkedin.com/company/alsoftbv"
      target="_blank"
      aria-label="LinkedIn"
    >
      <img src="/linkedin.png" alt="LinkedIn" />
    </a>
  </div>

  <div class="footer-right">
    <a href="/services">Services</a>
    <a href="/industries">Industries</a>
    <a href="/about">About Us</a>

    <div class="small-button">
      <GetInTouchButton />
    </div>
  </div>
</section>

<style>
  .footer {
    background-color: #000000;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 1.5rem 2rem;
    flex-wrap: wrap;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
  }

  .footer-left p {
    margin: 0;
    padding: 0.2rem 0;
  }

  .footer-right {
    display: flex;
    flex-direction: column;
    align-items: end;
    justify-content: right;
    text-align: right;
    gap: 0.5rem;
  }

  a {
    text-decoration: none;
    font-size: 0.95rem;
    transition: text-decoration 0.2s ease;
  }

  a:hover {
    text-decoration: underline;
  }

  img {
    height: 22px;
    width: auto;
    opacity: 0.9;
    transition: opacity 0.2s ease;
  }

  img:hover {
    opacity: 1;
  }

  .small-button {
    transform: scale(0.65);
  }

  @media (max-width: 768px) {
    .footer {
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: flex-start;
      margin-top: 5%;
    }

    p,
    a {
      font-size: 0.7rem;
    }

    .small-button {
      transform: scale(0.5);
    }

    img {
      height: 20px;
    }
  }
</style>
