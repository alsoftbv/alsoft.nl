---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";

const { pageTitle, data } = Astro.props;
---

<BaseLayout>
  <Header siteTitle={pageTitle} />

  {
    data.map(
      (
        item: { image: ImageMetadata; title: string; longDescription: string },
        index: number
      ) => (
        <section class={`content-section ${index % 2 !== 0 ? "reverse" : ""}`}>
          <div class="content-wrapper">
            <div class="image-wrapper">
              <Image
                class="content-image"
                src={item.image}
                alt={item.title}
                loading={index === 0 ? "eager" : "lazy"}
              />
            </div>
            <div class="text-content">
              <h2 id={item.title.replace(/\s+/g, "").toLowerCase()}>
                {item.title}
              </h2>
              <p class="content-description">{item.longDescription}</p>
              <Button href="/contact">Get in touch</Button>
            </div>
          </div>
        </section>
      )
    )
  }
</BaseLayout>

<style>
  .content-section {
    display: flex;
    justify-content: center;
    padding: 2rem;
  }

  .content-wrapper {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex-wrap: nowrap;
    max-width: 1200px;
    width: 100%;
    padding: 3rem;
    border-radius: 10px;
    background-color: #202020;
  }

  .content-section.reverse .content-wrapper {
    flex-direction: row-reverse;
  }

  .image-wrapper {
    width: 50%;
    border-radius: 10px;
    overflow: hidden;
  }

  .image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
  }

  .text-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
    text-align: center;
  }

  .text-content h2 {
    margin: 0;
    font-size: 3rem;
  }

  .content-description {
    font-size: 1.1rem;
  }

  [id] {
    scroll-margin-top: 300px;
  }

  @media (max-width: 768px) {
    .content-section.reverse .content-wrapper {
      flex-direction: column;
    }

    .content-wrapper {
      flex-direction: column;
      gap: 1.5rem;
      max-width: fit-content;
    }

    .text-content h2 {
      font-size: 2rem;
    }

    .image-wrapper {
      width: 100%;
    }

    [id] {
      scroll-margin-top: 600px;
    }
  }
</style>
