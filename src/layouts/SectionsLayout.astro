---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import type { CardItem } from "../data/card-item";

const { pageTitle, data } = Astro.props;
---

<BaseLayout>
  <Header siteTitle={pageTitle} />
  {
    data.map((item: CardItem, index: number) => (
      <section id={item.id} class="content-section">
        <div class={`content-wrapper ${index % 2 !== 0 ? "reverse" : ""}`}>
          <div class="image-wrapper">
            <Image
              class="content-image"
              src={item.image}
              alt={item.title}
              decoding="async"
              loading={index === 0 ? "eager" : "lazy"}
            />
          </div>
          <div class="text-content">
            <h2>{item.title}</h2>
            <p class="content-description">{item.longDescription}</p>
            <Button href="/contact">Get in touch</Button>
          </div>
        </div>
      </section>
    ))
  }
</BaseLayout>

<style>
  .content-section {
    display: flex;
    justify-content: center;
    margin: 2rem;
    scroll-margin-top: 6.5rem;
  }

  .content-wrapper {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex-wrap: nowrap;
    max-width: 1200px;
    width: 100%;
    padding: 3rem;
    border-radius: 10px;
    background-color: #202020;
  }

  .reverse {
    flex-direction: row-reverse;
  }

  .image-wrapper {
    width: 50%;
    border-radius: 10px;
    overflow: hidden;
  }

  .image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
  }

  .text-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
  }

  .text-content h2 {
    margin: 0;
    font-size: 3rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    .content-section {
      scroll-margin-top: 4.5rem;
    }
    .content-wrapper {
      flex-direction: column;
      gap: 1.5rem;
      max-width: fit-content;
    }

    .text-content h2 {
      font-size: 2rem;
    }

    .image-wrapper {
      width: 100%;
    }
  }
</style>
