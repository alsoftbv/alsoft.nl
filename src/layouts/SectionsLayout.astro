---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import type { CardItem } from "../data/card-item";

const { pageTitle, data } = Astro.props;
---

<BaseLayout>
  <Header siteTitle={pageTitle} />
  <section class="content-section">
    {
      data.map((item: CardItem, index: number) => (
        <div
          class={`content-wrapper ${index % 2 !== 0 ? "reverse" : ""}`}
          id={item.id}
        >
          <div class="image-wrapper">
            <Image
              class="content-image"
              src={item.image}
              alt={item.title}
              decoding="async"
              loading={index === 0 ? "eager" : "lazy"}
            />
          </div>
          <div class="text-content">
            <h2>{item.title}</h2>
            <p class="content-description">{item.longDescription}</p>
            <Button href="/contact" class="get-in-touch">
              Get in touch
            </Button>
          </div>
        </div>
      ))
    }
  </section>
</BaseLayout>

<style>
  .content-section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    justify-content: center;
    padding: 3rem;
  }

  .content-wrapper {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 3rem;
    gap: 2rem;
    border-radius: 10px;
    background-color: #202020;
    scroll-margin-top: 4.5rem;
    max-width: 80vw;
  }

  .reverse {
    flex-direction: row-reverse;
  }

  .image-wrapper {
    width: 50%;
    border-radius: 10px;
    overflow: hidden;
  }

  .image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
  }

  .text-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
  }

  .text-content p {
    margin: 0;
  }

  .text-content h2 {
    margin: 0;
    font-size: 3rem;
    text-align: center;
  }

  .get-in-touch {
    width: fit-content;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .content-section {
      padding: 1rem;
    }

    .content-wrapper {
      flex-direction: column;
      gap: 1rem;
      padding: 1.5rem;
    }

    .text-content h2 {
      font-size: 2rem;
    }

    .image-wrapper {
      width: 100%;
    }
  }
</style>
