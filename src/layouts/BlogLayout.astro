---
import BaseLayout from "./BaseLayout.astro";
const { data, slug, canonical } = Astro.props;

const url = Astro.url.origin;
---

<BaseLayout
  title={data.title}
  description={data.description}
  image={`${url}/og/${slug}.png`}
  canonical={`${url}/${canonical}`}
>
  <div class="post-content">
    <h1 class="title">{data.title}</h1>
    <p class="date">
      {
        data.date
          .toLocaleDateString("en-GB", {
            day: "2-digit",
            month: "2-digit",
            year: "numeric",
          })
          .replace(/\//g, "-")
      }
    </p>
    <slot />
  </div>
</BaseLayout>

<style is:inline>
  .post-content {
    max-width: 960px;
    margin: 3rem auto;
    padding: 0 1.5rem;
  }

  .post-content h1 {
    font-size: 2rem;
  }

  .post-content h1,
  .post-content h2 {
    font-weight: 700;
    margin: 1.2rem 0 1rem 0;
  }

  .post-content h3 {
    font-weight: 600;
    margin: 1rem 0;
  }

  .post-content img {
    width: 60%;
    height: auto;
    margin: 2rem 20% 0 20%;
  }

  .post-content blockquote {
    text-align: center;
    font-style: italic;
    margin: 0 0 2rem 0;
  }

  .post-content hr {
    width: 240px;
    margin: 2rem auto;
    border: none;
    height: 2px;
    background-color: #4f4f4f;
    opacity: 1;
  }

  .post-content p {
    margin: 0 0 0.5rem 0;
  }

  .post-content ul {
    margin: 0.8rem 0;
  }

  .post-content li {
    line-height: 2;
  }

  .post-content code {
    background: #202020;
    border-radius: 8px;
    padding: 0.2rem 0.5rem;
  }

  .post-content .date {
    color: #cfcfcf;
    margin-bottom: 1rem;
  }

  .post-content .title {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .post-content {
      margin: 2rem auto;
      padding: 0 0.8rem;
    }

    .post-content img {
      width: 100%;
      margin: 1rem 0 0 0;
    }

    .post-content blockquote {
      margin-bottom: 1rem;
    }
  }
</style>
